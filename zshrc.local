# XDG_CONFIG_HOME
export XDG_CONFIG_HOME="$HOME/.config"

# Load starship prompt
eval "$(starship init zsh)"

# Load zoxide
eval "$(zoxide init zsh)"

# Tmux
if [[ -n "$TMUX" ]]; then
  autoload -Uz compinit
  compinit
fi

# Ansible
# -----------------------------------------------------------------------------
export ANSIBLE_LINT_CACHE_DIR=~/.ansible/lint-cache
export ANSIBLE_STDOUT_CALLBACK=ansible.builtin.default
export ANSIBLE_RESULT_FORMAT=yaml

# On macOS, this fixes the error:
#
# objc[45956]: +[NSMutableString initialize] may have been in progress in another thread when fork() was called.
# ...
# ERROR! A worker was found in a dead state
#
# by disabling macOSâ€™s strict behavior around unsafe fork() in multi-threaded Objective-C code.
export OBJC_DISABLE_INITIALIZE_FORK_SAFETY=YES

# AWS Env
# export AWS_SSH_KEY_ID=aws-faleman.pem

# AWS CLI
# source /usr/local/share/zsh/site-functions/aws_zsh_completer.sh
source ~/.aws_zsh_completer.sh

# FZF 
source <(fzf --zsh)

# Terraform completion
autoload -U +X bashcompinit && bashcompinit
complete -o nospace -C /opt/homebrew/bin/terraform terraform

export MANPAGES="nvim +Man!"

export PATH="$HOME/.bin:$PATH"

###############################################################################
# mise
###############################################################################

# mise version manager
eval "$(mise activate zsh)"

# mise ansible
# export ANSIBLE_LINT_CACHE_DIR=~/.ansible/lint-cache
# export ANSIBLE_STDOUT_CALLBACK=ansible.builtin.default
# export ANSIBLE_RESULT_FORMAT=yaml

# mise ruby
# Fix for installing older versions of Ruby
export DLDFLAGS="-Wl,-undefined,dynamic_lookup"
export OPENSSL_CFLAGS="-Wno-error=implicit-function-declaration"
export CFLAGS=-Wno-error="implicit-function-declaration"

